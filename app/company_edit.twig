	<div id="whole-area">
		{% if data['ID'] %}

			<form class="form-horizontal">

				<fieldset class="col-md-6">
						<legend>Company Details</legend>
					<div class="form-group">
						<label for="company" class="col-sm-4 control-label">Company</label>

						<div class="col-sm-8">
							<input type="text" class="form-control" id="company" name="company" placeholder="Company" value="{{ data['company'] }}">
						</div>
					</div>

				

				</fieldset>
				<fieldset class="col-md-6">
					<legend>Users</legend>
				</fieldset>

				
				<div class="form-btn-bar">
					
					<div class="container">
						<div class="pull-left">
							<button class="btn" type="button" id="delete-btn" ><i class="fa fa-trash"></i></button>
						</div>
						<div class="pull-right">
							<a href="/content/{{ data['ID'] }}/{{ data['url'] }}" class="btn btn-link" style="width:150px;">Cancel</a>
							<button type="submit" class="btn btn-primary" style="width:150px;">Save</button>
						</div>
							
							<!--
							<div class="clearfix"></div>
							<button type="submit" class="btn btn-default pull-right">Saving <i class="fa fa-refresh"></i></button>
							<div class="clearfix"></div>
							<button type="submit" class="btn btn-default pull-right">Saved <i class="fa fa-check"></i></button>
							-->
					</div>
					
					
					
				</div>



			</form>
<div class="clearfix"></div>
<div style="height:70px;"></div>




		{% else %}

			<div class="c" style="padding:50px;">
				<img src="/app/_images/sad_face.png" alt=""/>

				<p class="oops-text">Sowwy!</p></div>
			<div class="alert alert-danger c" role="alert">No company found or no permission to access it!</div>
		{% endif %}
	</div>

